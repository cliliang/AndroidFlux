<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cliliang">

    <application
        android:name=".app.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/CommonTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".user.ui.LoginActivity"
            android:theme="@style/CommonTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".user.ui.RegisterActivity"
            android:theme="@style/CommonTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".user.ui.OutActivity"
            android:theme="@style/CommonTheme"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}" />
    </application>

</manifest>