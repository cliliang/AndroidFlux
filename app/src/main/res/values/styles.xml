<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Animation.Slide</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/darker_gray</item>
    </style>

    <style name="Animation" />

    <style name="Animation.Slide" parent="@style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>


</resources>
